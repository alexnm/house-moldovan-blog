<ul class="postlist">
  {% for post in postslist | reverse %}
    <li class="postlist-item">
      <article class="postcard" href="{{ post.url | url }}">
        <a class="post-image-link" href="{{post.url | url}}" title="{{post.data.pageTitle}}">
          <div class="post-image" style="background-image: url('{{ post.data.coverThumb }}')"></div>
        </a>
        <div class="post-content">
          <div class="post-title">
            <h2>{{ post.data.pageTitle }}</h2>
          </div>
          <p class="post-text">{{ post.data.coverText }}</p>
          <a class="post-cta link-button" href="{{post.url | url}}">Explore</a>
        </div>
      </article>
    </li>
  {% endfor %}
</ul>