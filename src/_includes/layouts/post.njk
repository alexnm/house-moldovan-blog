---
layout: layouts/base.njk
---
<div class="cover-image" style="background-image: url('{{cover}}')">
  <div class="cover-overlay">
    <div>
      <h1>{{pageTitle}}</h1>
      <div class="spacer-vertical-1"></div>
      <p>{{subTitle}}</p>
      <div class="spacer-vertical-3"></div>
      <span class="tag-list mobile-only">
        {% for tag in tags %}
          {%- if tag != 'itineraries' and tag != 'spotlights' -%}
          {% set tagUrl %}/explore/{{ tag | slug }}/{% endset %}
          <a class="link-button" href="{{ tagUrl | url }}" class="tag">{{ tag }}</a>
          {%- endif -%}
        {% endfor %}
      </span>
    </div>
  </div>
</div>
<div class="cover-band">
  <div class="text-content">
    <div class="cover-band-content">
      <a class="link" target="_blank" href="{{mapsLink}}">{{region}}</a>
      <span>{{ content | readingTime }} read</span>
    </div>
  </div>
</div>

{{ content | safe }}

<div class="spacer-vertical-5"></div>

<div class="wide-content text-center">
  <h2>You might also enjoy</h2>
  <div class="spacer-vertical-1"></div>

  {% set postslist = collections.spotlights | head(-3) %}
  {% include "components/postslist.njk" %}
</div>

<div class="spacer-vertical-5"></div>

