---
layout: layouts/post.njk
permalink: /travel/{{pageTitle | slug}}/
suggestion: 'spotlights'
---

<div class="text-content markdown-content">
  <p>{{headline}}</p>
  <hr />
  <p>This article covers:</p>
  {{ content | toc | safe }}
  <hr />
  <article>
    {{ content | safe }}
  </article>
</div>

{% if packing %}   
  <div class="text-content">
    <div class="card checklist">
      <h2>Packing checklist</h2>
      <ul>
        {% for listItem in packing %}
          <li>{{listItem}}</li>
        {% endfor %}
      </ul>
    </div>
  </div>
{% endif %}

